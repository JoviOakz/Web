const title = document.getElementById('titulo-produto')
const name_color = document.getElementById('nome-cor-selecionada')
const image = document.getElementById('imagem-visualizacao')
const image_mini_1 = document.getElementById('0-imagem-miniatura')
const image_mini_2 = document.getElementById('1-imagem-miniatura')
const image_mini_3 = document.getElementById('2-imagem-miniatura')
let color = 'azul-inverno'
let pos = '1'
let scale_size = '45'

function trocaCor() {
    const check_color = document.querySelector('[name="opcao-cor"]:checked').id
    
    switch(check_color) {
        case '0-cor':
            color = 'verde-cipreste'
        break

        case '1-cor':
            color = 'azul-inverno'
        break

        case '2-cor':
            color = 'meia-noite'
        break

        case '3-cor':
            color = 'estelar'
        break

        case '4-cor':
            color = 'rosa-claro'
        break
    }

    name_color.innerHTML = `Cor - ${color.charAt(0).toUpperCase() + color.slice(1).toLowerCase()}`
    title.innerHTML = `Pulseira loop esportiva ${color} para caixa de ${scale_size} mm`
    image.setAttribute('src', `./imagens/opcoes-cores/imagens-${color}/imagem-${pos}.jpeg`)
    image_mini_1.setAttribute('src', `./imagens/opcoes-cores/imagens-${color}/imagem-0.jpeg`)
    image_mini_2.setAttribute('src', `./imagens/opcoes-cores/imagens-${color}/imagem-1.jpeg`)
    image_mini_3.setAttribute('src', `./imagens/opcoes-cores/imagens-${color}/imagem-2.jpeg`)
}

function trocarImagem() {
    const check_position = document.querySelector('[name="opcao-imagem"]:checked').id
    pos = check_position[0]
    
    image.setAttribute('src', `./imagens/opcoes-cores/imagens-${color}/imagem-${pos}.jpeg`)
}

function trocarTamanho() {
    const check_size = document.querySelector('[name="opcao-tamanho"]:checked').id

    switch(check_size) {
        case '0-tamanho':
            scale_size = '41'
            image.style.transform = 'scale(0.85)'
        break

        case '1-tamanho':
            scale_size = '45'
            image.style.transform = 'scale(1)'
        break
    }

    title.innerHTML = `Pulseira loop esportiva ${color} para caixa de ${scale_size} mm`
}
